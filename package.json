{
  "name": "dawn",
  "version": "1.0.0",
  "packageManager": "pnpm@9.15.1+sha512.1acb565e6193efbebda772702950469150cf12bcc764262e7587e71d19dc98a423dff9536e57ea44c49bdf790ff694e83c27be5faa23d67e0c033b583be4bfcf",
  "scripts": {
    "build": "turbo run build",
    "db:migrate": "pnpm --filter @dawn/db db:migrate",
    "dev": "turbo run dev --ui tui",
    "format": "prettier . --ignore-unknown --write && turbo run lint -- --fix",
    "lint": "turbo run lint",
    "postinstall": "./scripts/postinstall.sh",
    "prepare": "husky",
    "start:appview": "pnpm -s db:migrate && pnpm --filter @dawn/appview start",
    "start:ingester": "pnpm -s db:migrate && pnpm --filter @dawn/ingester start",
    "start:worker": "pnpm -s db:migrate && pnpm --filter @dawn/worker start",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "giget": "1.2.3",
    "husky": "9.1.7",
    "lint-staged": "15.4.2",
    "prettier": "3.4.2",
    "prettier-plugin-pkg": "0.18.1",
    "turbo": "2.3.4"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg"
    ]
  }
}
