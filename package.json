{
  "name": "dawn",
  "version": "1.0.0",
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "all": "turbo run all",
    "build": "turbo run build",
    "db:migrate": "pnpm --filter @dawn/db db:migrate",
    "dev": "./scripts/dev.sh",
    "format": "prettier . --ignore-unknown --write && turbo run lint -- --fix",
    "lint": "pnpm prettier . --check && turbo run lint",
    "prepare": "husky",
    "start": "turbo run start",
    "start:appview": "pnpm -s db:migrate && pnpm --filter @dawn/appview start",
    "start:ingester": "pnpm --filter @dawn/ingester start",
    "start:worker": "pnpm -s db:migrate && pnpm --filter @dawn/worker start",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "husky": "9.1.7",
    "kill-port": "2.0.1",
    "lint-staged": "16.1.0",
    "prettier": "3.5.3",
    "prettier-plugin-pkg": "0.19.1",
    "prettier-plugin-sh": "0.17.4",
    "turbo": "2.5.4",
    "wait-on": "8.0.3"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg",
      "prettier-plugin-sh"
    ]
  }
}
