{
  "name": "dawn",
  "version": "1.0.0",
  "packageManager": "pnpm@10.2.1+sha512.398035c7bd696d0ba0b10a688ed558285329d27ea994804a52bad9167d8e3a72bcb993f9699585d3ca25779ac64949ef422757a6c31102c12ab932e5cbe5cc92",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "all": "turbo run all",
    "build": "turbo run build",
    "db:migrate": "pnpm --filter @dawn/db db:migrate",
    "dev": "turbo run dev --ui tui",
    "format": "prettier . --ignore-unknown --write && turbo run lint -- --fix",
    "lint": "pnpm prettier . --check && turbo run lint",
    "prepare": "husky",
    "start": "turbo run start",
    "start:appview": "pnpm -s db:migrate && pnpm --filter @dawn/appview start",
    "start:ingester": "pnpm --filter @dawn/ingester start",
    "start:worker": "pnpm -s db:migrate && pnpm --filter @dawn/worker start",
    "studio": "pnpm --filter @dawn/db studio",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "giget": "2.0.0",
    "husky": "9.1.7",
    "lint-staged": "15.4.3",
    "prettier": "3.5.3",
    "prettier-plugin-pkg": "0.18.1",
    "turbo": "2.4.4"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg"
    ]
  }
}
