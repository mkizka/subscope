{
  "name": "@repo/workspace",
  "version": "1.0.0",
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "_prettier": "prettier --ignore-path .prettier --ignore-path .gitignore",
    "all": "turbo run typecheck format && vitest run",
    "all:unit": "turbo run typecheck format && pnpm test:unit",
    "build": "turbo run build",
    "db:generate": "pnpm --filter @repo/db db:generate",
    "db:migrate": "pnpm --filter @repo/db db:migrate",
    "dev": "./scripts/dev.sh",
    "format": "pnpm -s _prettier . --write && turbo run format",
    "get-docs": "./scripts/get-docs.sh",
    "lint": "pnpm -s _prettier . --check && turbo run lint",
    "prepare": "husky",
    "studio": "pnpm --filter @repo/db dev",
    "test": "vitest",
    "test:unit": "vitest run --project worker:unit --project appview:unit --project blob-proxy:unit",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "4.0.15",
    "husky": "9.1.7",
    "kill-port": "2.0.1",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "prettier-plugin-pkg": "0.21.2",
    "prettier-plugin-sh": "0.18.0",
    "repomix": "1.9.2",
    "turbo": "2.6.3",
    "vitest": "^4.0.15",
    "wait-on": "9.0.3"
  },
  "lint-staged": {
    "*": "pnpm -s _prettier --ignore-unknown --write"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg",
      "prettier-plugin-sh"
    ]
  }
}
