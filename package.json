{
  "name": "@repo/workspace",
  "version": "1.0.0",
  "packageManager": "pnpm@10.24.0",
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "^24",
      "onFail": "download"
    }
  },
  "scripts": {
    "_prettier": "prettier --ignore-path .prettier --ignore-path .gitignore",
    "all": "turbo run typecheck format && pnpm test --run",
    "build": "turbo run build",
    "db:generate": "pnpm --filter @repo/db db:generate",
    "db:migrate": "pnpm --filter @repo/db db:migrate",
    "dev": "./scripts/dev.sh",
    "format": "pnpm -s _prettier . --write && turbo run format",
    "get-docs": "./scripts/get-docs.sh",
    "lint": "pnpm -s _prettier . --check && turbo run lint",
    "prepare": "husky",
    "studio": "pnpm --filter @repo/db dev",
    "test": "vitest",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "3.2.4",
    "husky": "9.1.7",
    "kill-port": "2.0.1",
    "lint-staged": "16.2.1",
    "prettier": "3.6.2",
    "prettier-plugin-pkg": "0.21.2",
    "prettier-plugin-sh": "0.18.0",
    "repomix": "1.6.0",
    "turbo": "2.5.8",
    "vitest": "^3.2.4",
    "wait-on": "9.0.1"
  },
  "lint-staged": {
    "*": "pnpm -s _prettier --ignore-unknown --write"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg",
      "prettier-plugin-sh"
    ]
  }
}
