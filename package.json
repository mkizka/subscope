{
  "name": "@repo/workspace",
  "version": "1.0.0",
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "_prettier": "prettier --ignore-path .prettier --ignore-path .gitignore",
    "all": "turbo run typecheck format && pnpm test --run",
    "build": "turbo run build",
    "db:migrate": "pnpm --filter @repo/db db:migrate",
    "dev": "./scripts/dev.sh",
    "format": "turbo run format && pnpm -s _prettier . --write",
    "get-docs": "./scripts/get-docs.sh",
    "lint": "turbo run lint && pnpm -s _prettier . --check",
    "prepare": "husky",
    "studio": "pnpm --filter @repo/db dev",
    "test": "vitest",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "3.2.3",
    "husky": "9.1.7",
    "kill-port": "2.0.1",
    "lint-staged": "16.1.0",
    "prettier": "3.5.3",
    "prettier-plugin-pkg": "0.21.1",
    "prettier-plugin-sh": "0.17.4",
    "repomix": "0.3.9",
    "turbo": "2.5.4",
    "vitest": "^3.2.3",
    "wait-on": "8.0.3"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg",
      "prettier-plugin-sh"
    ]
  }
}
