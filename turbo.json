{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "src/generated/**"]
    },
    "typecheck": {
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "format": {
      "dependsOn": ["build"]
    },
    "all": {
      "dependsOn": ["typecheck", "lint"]
    },
    "dev": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
