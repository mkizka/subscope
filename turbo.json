{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "inputs": ["**/eslint.config.mjs", "**/*.{ts,tsx}"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
