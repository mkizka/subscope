{
  "name": "@repo/test-utils",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./global-setup": "./src/global-setup.ts"
  },
  "scripts": {
    "_eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint",
    "_prettier": "prettier . --ignore-path ../../.gitignore --cache --log-level warn",
    "format": "pnpm -s _eslint --fix && pnpm -s _prettier --ignore-unknown --write",
    "lint": "pnpm -s _eslint && pnpm -s _prettier --check",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@atproto/syntax": "0.4.3",
    "@factory-js/factory": "0.4.2",
    "@faker-js/faker": "10.2.0",
    "@repo/common": "workspace:*",
    "@repo/db": "workspace:*",
    "@testcontainers/postgresql": "11.11.0",
    "drizzle-seed": "0.3.1",
    "execa": "9.6.1",
    "multiformats": "13.4.2",
    "typed-inject": "5.0.0",
    "vitest": "4.0.18"
  },
  "devDependencies": {
    "@mkizka/eslint-config": "8.0.0",
    "@tsconfig/node-lts": "24.0.0",
    "drizzle-orm": "0.45.1",
    "eslint": "9.39.2",
    "typescript": "5.9.3"
  },
  "sideEffects": false
}
