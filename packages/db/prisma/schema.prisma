generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  did       String   @id
  handle    String
  profile   Profile?
  indexedAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Profile {
  did         String    @id
  avatarCid   String?
  description String?
  displayName String?
  createdAt   DateTime?
  indexedAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user   User  @relation(fields: [did], references: [did], onDelete: Cascade)
  avatar Blob? @relation(fields: [avatarCid], references: [cid], onDelete: SetNull)
}

model Blob {
  cid       String   @id
  mimeType  String
  size      Int
  indexedAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile Profile[]
}
