{
  "lexicon": 1,
  "id": "me.subsco.admin.verifyAccess",
  "defs": {
    "main": {
      "type": "query",
      "description": "Verify whether the authenticated user has admin access.",
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["status"],
          "properties": {
            "status": {
              "type": "string",
              "enum": ["authorized", "unauthorized"],
              "description": "Access status: authorized (has admin access), unauthorized (not an admin)"
            }
          }
        }
      }
    }
  }
}
