{
  "name": "@repo/client",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "exports": {
    "./api": {
      "import": "./dist/api.js",
      "types": "./dist/api.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    }
  },
  "scripts": {
    "_eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint",
    "_prettier": "prettier . --ignore-path ../../.gitignore --cache --log-level warn",
    "build": "tsc",
    "dev": "tsc --watch",
    "format": "pnpm -s _eslint --fix && pnpm -s _prettier --ignore-unknown --write",
    "lint": "pnpm -s _eslint && pnpm -s _prettier --check",
    "postinstall": "./scripts/postinstall.sh",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@atproto/api": "0.18.4",
    "@atproto/lexicon": "0.5.2",
    "@atproto/oauth-client": "0.5.10",
    "@atproto/xrpc": "0.7.6",
    "@atproto/xrpc-server": "0.10.2",
    "multiformats": "13.4.1"
  },
  "devDependencies": {
    "@atproto/lex-cli": "0.9.7",
    "@mkizka/eslint-config": "8.0.0",
    "@tsconfig/node-lts": "24.0.0",
    "@types/express": "5.0.6",
    "eslint": "9.39.1",
    "giget": "2.0.0",
    "typescript": "5.9.3"
  },
  "sideEffects": false
}
