{
  "name": "@repo/client",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./api": {
      "import": "./dist/api.mjs",
      "types": "./dist/api.d.ts"
    },
    "./server": {
      "import": "./dist/server.mjs",
      "types": "./dist/server.d.ts"
    }
  },
  "scripts": {
    "_eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint",
    "_prettier": "prettier . --ignore-path ../../.gitignore --cache --log-level warn",
    "build": "pnpm generate && run-p -s build:*",
    "build:ts": "node build.mjs",
    "build:type": "tsc --project tsconfig.build.json",
    "dev": "chokidar ./scripts/generate.sh ./lexicons/dev/**/*.json --command \"pnpm build\" --initial",
    "format": "pnpm -s _eslint --fix && pnpm -s _prettier --ignore-unknown --write",
    "generate": "./scripts/generate.sh",
    "lint": "pnpm -s _eslint && pnpm -s _prettier --check",
    "postinstall": "./scripts/postinstall.sh",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@atproto/lexicon": "0.4.11",
    "@atproto/xrpc": "0.7.0",
    "@atproto/xrpc-server": "0.7.19",
    "multiformats": "13.3.6"
  },
  "devDependencies": {
    "@atproto/lex-cli": "0.8.2",
    "@mkizka/eslint-config": "7.0.1",
    "@tsconfig/node-lts": "22.0.1",
    "@types/express": "5.0.3",
    "chokidar-cli": "3.0.0",
    "esbuild": "0.25.5",
    "eslint": "9.19.0",
    "giget": "2.0.0",
    "npm-run-all2": "8.0.4",
    "typescript": "5.8.3"
  },
  "sideEffects": false
}
