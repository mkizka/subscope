{
  "name": "@repo/client",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./api": {
      "import": "./dist/api.mjs",
      "types": "./dist/api.d.ts"
    },
    "./server": {
      "import": "./dist/server.mjs",
      "types": "./dist/server.d.ts"
    }
  },
  "scripts": {
    "_eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint",
    "_prettier": "prettier . --ignore-path ../../.gitignore --cache --log-level warn",
    "build": "tsup && tsc --project tsconfig.build.json",
    "dev": "tsup --watch --dts",
    "format": "pnpm -s _eslint --fix && pnpm -s _prettier --ignore-unknown --write",
    "lint": "pnpm -s _eslint && pnpm -s _prettier --check",
    "postinstall": "./scripts/postinstall.sh",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@atproto/lexicon": "0.4.12",
    "@atproto/xrpc": "0.7.1",
    "@atproto/xrpc-server": "0.9.0",
    "multiformats": "13.3.7"
  },
  "devDependencies": {
    "@atproto/lex-cli": "0.9.0",
    "@mkizka/eslint-config": "7.1.0",
    "@tsconfig/node-lts": "22.0.2",
    "@types/express": "5.0.3",
    "esbuild": "0.25.6",
    "eslint": "9.31.0",
    "giget": "2.0.0",
    "tsup": "8.5.0",
    "typescript": "5.8.3"
  },
  "sideEffects": false
}
