{
  "name": "@repo/subscope",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "_eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint",
    "_prettier": "prettier . --ignore-path ../../.gitignore --cache --log-level warn",
    "build": "tsc -b && vite build",
    "dev": "NODE_ENV=development tsx watch ./src/subscope.ts",
    "format": "pnpm -s _eslint --fix && pnpm -s _prettier --ignore-unknown --write",
    "lint": "pnpm -s _eslint && pnpm -s _prettier --check",
    "preview": "vite preview",
    "start": "NODE_ENV=production tsx ./src/subscope.ts",
    "typecheck": "tsc -b --noEmit"
  },
  "dependencies": {
    "@atproto/did": "0.2.3",
    "@atproto/jwk-jose": "^0.1.11",
    "@atproto/oauth-client-node": "^0.3.12",
    "@atproto/xrpc": "0.7.6",
    "@bull-board/api": "^6.15.0",
    "@bull-board/express": "^6.15.0",
    "@repo/client": "workspace:*",
    "@repo/common": "workspace:*",
    "@repo/db": "workspace:*",
    "drizzle-orm": "0.45.0",
    "express": "5.2.1",
    "iron-session": "^8.0.4",
    "node-cron": "4.2.1",
    "preact": "^10.27.2",
    "preact-iso": "2.11.1",
    "sharp": "0.34.5",
    "typed-inject": "^5.0.0",
    "zod": "4.1.13",
    "zod-validation-error": "^5.0.0"
  },
  "devDependencies": {
    "@mkizka/eslint-config": "8.0.0",
    "@preact/preset-vite": "^2.10.2",
    "@repo/test-utils": "workspace:*",
    "@repo/vitest": "workspace:*",
    "@types/express": "5.0.6",
    "@types/node": "^24.10.1",
    "@types/node-cron": "3.0.11",
    "eslint": "9.39.1",
    "tsx": "4.21.0",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.2.5",
    "vitest": "4.0.15"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}
