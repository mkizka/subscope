{
  "name": "@repo/ingester",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "_eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint",
    "_prettier": "prettier . --ignore-path ../../.gitignore --cache --log-level warn",
    "dev": "NODE_ENV=development tsx watch ./src/ingester.ts | pino-pretty",
    "format": "pnpm -s _eslint --fix && pnpm -s _prettier --ignore-unknown --write",
    "lint": "pnpm -s _eslint && pnpm -s _prettier --check",
    "start": "NODE_ENV=production tsx ./src/ingester.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@atproto/did": "0.2.3",
    "@atproto/tap": "0.0.2",
    "@atproto/xrpc-server": "0.10.2",
    "@keyv/redis": "5.1.4",
    "@repo/client": "workspace:*",
    "@repo/common": "workspace:*",
    "express": "5.2.1",
    "keyv": "5.5.5",
    "tsx": "4.21.0",
    "typed-inject": "5.0.0",
    "ws": "8.18.3",
    "zod": "4.1.13",
    "zod-validation-error": "5.0.0"
  },
  "devDependencies": {
    "@mkizka/eslint-config": "7.2.0",
    "@tsconfig/node-lts": "24.0.0",
    "@types/express": "5.0.6",
    "@types/node": "24.10.1",
    "@types/ws": "8.18.1",
    "eslint": "9.39.1",
    "pino-pretty": "13.1.3",
    "typescript": "5.9.3"
  }
}
