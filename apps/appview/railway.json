{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "watchPatterns": [
      "/apps/appview/**/*",
      "/lexicons/**/*",
      "/packages/client/**/*",
      "/packages/common/**/*",
      "/packages/db/**/*",
      "pnpm-lock.yaml"
    ]
  },
  "deploy": {
    "startCommand": "pnpm -s db:migrate && pnpm --filter @dawn/appview start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60
  }
}
