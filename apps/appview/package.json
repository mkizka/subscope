{
  "name": "@repo/appview",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "_eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint",
    "_prettier": "prettier . --ignore-path ../../.gitignore --cache --log-level warn",
    "dev": "NODE_ENV=development tsx watch ./src/appview.ts | pino-pretty",
    "format": "pnpm -s _eslint --fix && pnpm -s _prettier --ignore-unknown --write",
    "lint": "pnpm -s _eslint && pnpm -s _prettier --check",
    "start": "NODE_ENV=production node ./src/appview.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@atproto/did": "0.2.0",
    "@atproto/identity": "0.4.9",
    "@atproto/syntax": "0.4.1",
    "@atproto/xrpc-server": "0.9.5",
    "@repo/client": "workspace:*",
    "@repo/common": "workspace:*",
    "@repo/db": "workspace:*",
    "cors": "2.8.5",
    "drizzle-orm": "0.44.5",
    "express": "5.1.0",
    "express-prom-bundle": "8.0.0",
    "typed-inject": "5.0.0",
    "zod": "4.1.11",
    "zod-validation-error": "4.0.2"
  },
  "devDependencies": {
    "@mkizka/eslint-config": "7.1.2",
    "@repo/test-utils": "workspace:*",
    "@tsconfig/node-lts": "22.0.2",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/node": "24.5.2",
    "@types/ws": "8.18.1",
    "eslint": "9.36.0",
    "pino-pretty": "13.1.1",
    "tsx": "4.20.6",
    "typescript": "5.9.2",
    "vitest": "3.2.4",
    "vitest-mock-extended": "3.1.0"
  }
}
