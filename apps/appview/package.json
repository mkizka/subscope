{
  "name": "@dawn/appview",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "db:generate": "prisma generate",
    "db:migrate": "prisma db push",
    "dev": "run-p -s dev:*",
    "dev:prisma": "BROWSER=none prisma studio",
    "dev:server": "wait-on tcp:6008 && NODE_ENV=development tsx watch ./src/appview.ts | pino-pretty",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint",
    "start": "pnpm -s db:migrate && NODE_ENV=production tsx ./src/appview.ts"
  },
  "dependencies": {
    "@atproto/api": "0.13.22",
    "@atproto/did": "0.1.3",
    "@atproto/identity": "0.4.3",
    "@atproto/xrpc-server": "0.7.4",
    "@dawn/client": "workspace:*",
    "@dawn/common": "workspace:*",
    "@prisma/client": "6.1.0",
    "@skyware/jetstream": "0.2.1",
    "express": "4.21.2",
    "pino": "9.5.0",
    "pino-http": "10.3.0",
    "typed-inject": "5.0.0",
    "ws": "8.18.0",
    "zod": "3.24.1",
    "zod-validation-error": "3.4.0"
  },
  "devDependencies": {
    "@mkizka/eslint-config": "5.3.4",
    "@tsconfig/node-lts": "22.0.1",
    "@types/express": "5.0.0",
    "@types/node": "22.10.2",
    "@types/ws": "8.5.13",
    "eslint": "9.17.0",
    "npm-run-all2": "7.0.2",
    "pino-pretty": "13.0.0",
    "prisma": "6.1.0",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "wait-on": "8.0.1"
  }
}
