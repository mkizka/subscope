{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "buildCommand": "pnpm build --filter @dawn/worker",
    "watchPatterns": [
      "/apps/worker/**/*",
      "/packages/client/**/*",
      "/packages/common/**/*",
      "/packages/db/**/*",
      "pnpm-lock.yaml"
    ]
  },
  "deploy": {
    "preDeployCommand": "pnpm db:migrate",
    "startCommand": "pnpm --filter @dawn/worker start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60
  }
}
