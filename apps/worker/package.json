{
  "name": "@repo/worker",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "_eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint",
    "_prettier": "prettier . --ignore-path ../../.gitignore --cache",
    "dev": "NODE_ENV=development tsx watch ./src/worker.ts | pino-pretty",
    "format": "pnpm -s _eslint --fix && pnpm -s _prettier --ignore-unknown --write",
    "lint": "pnpm -s _eslint && pnpm -s _prettier --check",
    "start": "NODE_ENV=production tsx ./src/worker.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@atproto/did": "0.1.5",
    "@atproto/identity": "0.4.8",
    "@atproto/lexicon": "0.4.11",
    "@atproto/repo": "0.8.1",
    "@atproto/syntax": "0.4.0",
    "@repo/client": "workspace:*",
    "@repo/common": "workspace:*",
    "@repo/db": "workspace:*",
    "bullmq": "5.53.2",
    "drizzle-orm": "0.44.2",
    "express": "5.1.0",
    "express-prom-bundle": "8.0.0",
    "pino-http": "10.5.0",
    "prom-client": "15.1.3",
    "typed-inject": "5.0.0",
    "ws": "8.18.2",
    "zod": "3.25.56",
    "zod-validation-error": "3.4.1"
  },
  "devDependencies": {
    "@mkizka/eslint-config": "6.0.2",
    "@repo/test-utils": "workspace:*",
    "@skyware/jetstream": "0.2.2",
    "@tsconfig/node-lts": "22.0.1",
    "@types/express": "5.0.3",
    "@types/node": "22.15.30",
    "@types/ws": "8.18.1",
    "eslint": "9.28.0",
    "pino-pretty": "13.0.0",
    "tsx": "4.19.4",
    "typescript": "5.8.3",
    "vitest": "3.2.3",
    "vitest-mock-extended": "3.1.0"
  }
}
